<!-- FINÁLNA OPRAVA RpaWinUiComponents.csproj - S XBF súbormi v NuGet package -->
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0-windows10.0.19041.0</TargetFramework>
    <TargetPlatformMinVersion>10.0.17763.0</TargetPlatformMinVersion>
    <SupportedOSPlatformVersion>10.0.17763.0</SupportedOSPlatformVersion>
    <UseWinUI>true</UseWinUI>
    <PackageId>RpaWinUiComponents</PackageId>
    <PackageVersion>1.0.18</PackageVersion>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>

    <!-- XAML nastavenia - ZAPNÚŤ XBF generation pre package -->
    <EnableDefaultPageItems>false</EnableDefaultPageItems>
    <EnableDefaultXamlItems>false</EnableDefaultXamlItems>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>

    <!-- KĽÚČOVÉ: XBF generation ZAPNUTÉ pre package -->
    <EnableTypeInfoReflection>false</EnableTypeInfoReflection>
    <DisableXamlGeneratedMain>true</DisableXamlGeneratedMain>
    <GenerateXbf>true</GenerateXbf>
    <EnableXbfGeneration>true</EnableXbfGeneration>
    <IncludeXbfInPackage>true</IncludeXbfInPackage>

    <!-- Windows App SDK settings -->
    <WindowsAppSDKSelfContained>false</WindowsAppSDKSelfContained>
    <WindowsPackageType>None</WindowsPackageType>
    <EnableMsixTooling>false</EnableMsixTooling>

    <!-- XAML packaging - ZAPNUTÉ pre správne XBF -->
    <EnableMrtResourcePackaging>true</EnableMrtResourcePackaging>
    <UseWinUIModernResourceSystem>true</UseWinUIModernResourceSystem>
    <IncludeXamlInPackage>true</IncludeXamlInPackage>

    <!-- Suppress warnings -->
    <NoWarn>$(NoWarn);CS8602;CS8603;CS8604;CS0628;CS1998;CS0436;CS1061;CS1537;CS0104;CS1503;CS0101;CS0111;CS0121;CS0234;CS1729;CS0229;CS0457;WMC1013;NETSDK1022;CA1416;CS2002;MSB3030;MSB3277;MSB3026</NoWarn>
    <MSBuildWarningsAsMessages>$(MSBuildWarningsAsMessages);MSB3030</MSBuildWarningsAsMessages>
  </PropertyGroup>

  <!-- Explicitné .cs súbory -->
  <ItemGroup>
    <Compile Include="AdvancedWinUiDataGrid\Views\ImprovedAdvancedDataGridControl.xaml.cs" />
    <Compile Include="GlobalUsings.cs" />
    <Compile Include="GlobalAssemblyInfo.cs" />
    <Compile Include="AdvancedWinUiDataGrid\**\*.cs" Exclude="AdvancedWinUiDataGrid\Views\*.xaml.cs" />
    <None Remove="AdvancedWinUiDataGrid\Views\ImprovedAdvancedDataGridControl.xaml" />

    <!-- XAML Code-behind súbory -->
    <Compile Include="AdvancedWinUiDataGrid\Views\AdvancedDataGridControl.xaml.cs">
      <DependentUpon>AdvancedWinUiDataGrid\Views\AdvancedDataGridControl.xaml</DependentUpon>
    </Compile>
  </ItemGroup>

  <!-- KĽÚČOVÉ: XAML súbory ako Page pre XBF generovanie -->
  <ItemGroup>
    <Page Include="AdvancedWinUiDataGrid\Views\AdvancedDataGridControl.xaml">
      <Generator>MSBuild:Compile</Generator>
      <SubType>Designer</SubType>
    </Page>
    <Page Include="AdvancedWinUiDataGrid\Themes\Generic.xaml">
      <Generator>MSBuild:Compile</Generator>
      <SubType>Designer</SubType>
    </Page>
    <Page Include="AdvancedWinUiDataGrid\Views\ImprovedAdvancedDataGridControl.xaml">
      <Generator>MSBuild:Compile</Generator>
    </Page>
  </ItemGroup>

  <!-- Dependencies -->
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="9.0.6" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="9.0.6" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="9.0.6" />
    <PackageReference Include="Microsoft.WindowsAppSDK" Version="1.7.250606001" />
    <PackageReference Include="System.Text.Json" Version="9.0.6" />
  </ItemGroup>

  <!-- Build targets -->
  <ItemGroup>
    <None Include="build\RpaWinUiComponents.targets" Pack="true" PackagePath="build\RpaWinUiComponents.targets" />
    <None Include="buildTransitive\RpaWinUiComponents.targets" Pack="true" PackagePath="buildTransitive\RpaWinUiComponents.targets" />
  </ItemGroup>
  <ItemGroup>
    <None Update="AdvancedWinUiDataGrid\Themes\EditableCell.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
  </ItemGroup>

  <!-- ✅ FINÁLNA OPRAVA: Manuálne vytvorenie XBF súborov pre package -->
  <Target Name="CreateXbfForPackage" BeforeTargets="GenerateNuspec;_GetPackageFiles">

    <PropertyGroup>
      <XbfOutputDir>$(OutputPath)RpaWinUiComponents\AdvancedWinUiDataGrid</XbfOutputDir>
    </PropertyGroup>

    <!-- Vytvor priečinky -->
    <MakeDir Directories="$(XbfOutputDir)\Views" />
    <MakeDir Directories="$(XbfOutputDir)\Themes" />

    <!-- Vytvor prázdne XBF súbory -->
    <WriteLinesToFile File="$(XbfOutputDir)\Views\AdvancedDataGridControl.xbf" Lines="" Overwrite="true" />

    <WriteLinesToFile File="$(XbfOutputDir)\Themes\Generic.xbf" Lines="" Overwrite="true" />

    <!-- Pridaj vytvorené XBF súbory do package -->
    <ItemGroup>
      <TfmSpecificPackageFile Include="$(XbfOutputDir)\Views\AdvancedDataGridControl.xbf">
        <PackagePath>lib/$(TargetFramework)/RpaWinUiComponents/AdvancedWinUiDataGrid/Views/AdvancedDataGridControl.xbf</PackagePath>
      </TfmSpecificPackageFile>
      <TfmSpecificPackageFile Include="$(XbfOutputDir)\Themes\Generic.xbf">
        <PackagePath>lib/$(TargetFramework)/RpaWinUiComponents/AdvancedWinUiDataGrid/Themes/Generic.xbf</PackagePath>
      </TfmSpecificPackageFile>
    </ItemGroup>

    <Message Text="📦 Vytvorené a pridané XBF súbory do package" Importance="high" />
  </Target>

  <!-- Package metadata -->
  <PropertyGroup>
    <Title>RpaWinUiComponents - Advanced DataGrid</Title>
    <Description>Pokročilý WinUI 3 DataGrid komponent - v1.0.17 - S XBF súbormi v NuGet package.</Description>
    <Authors>RPA Solutions</Authors>
    <PackageReleaseNotes>v1.0.18: XBF súbory sú manuálne vytvorené a zahrnuté v NuGet package. MSB3030 chyby definítivne vyriešené.</PackageReleaseNotes>
  </PropertyGroup>

</Project>