<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0-windows10.0.19041.0</TargetFramework>
    <TargetPlatformMinVersion>10.0.17763.0</TargetPlatformMinVersion>
    <UseWinUI>true</UseWinUI>
    <PackageId>RpaWinUiComponents</PackageId>
    <PackageVersion>1.0.14</PackageVersion>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>

    <!-- ✅ WinUI 3 library nastavenia -->
    <WindowsPackageType>None</WindowsPackageType>
    <EnableMsixTooling>false</EnableMsixTooling>
    <WindowsAppSDKSelfContained>false</WindowsAppSDKSelfContained>

    <!-- ✅ Vypnúť XBF ale zachovať XAML kompiláciu -->
    <EnableMrtResourcePackaging>false</EnableMrtResourcePackaging>
    <UseWinUIModernResourceSystem>false</UseWinUIModernResourceSystem>
    <AlwaysGenerateXbf>false</AlwaysGenerateXbf>
    <EnableDefaultPageItems>false</EnableDefaultPageItems>

    <!-- ✅ Suppress warnings -->
    <NoWarn>$(NoWarn);CS8602;CS8603;CS8604;CS0628;CS1998;NETSDK1206;MSB3270;MSB3271;MSB3026;MSB3277</NoWarn>
  </PropertyGroup>

  <!-- ✅ Package references -->
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="9.0.6" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="9.0.6" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="9.0.6" />
    <PackageReference Include="Microsoft.WindowsAppSDK" Version="1.7.250606001" />
    <PackageReference Include="System.Text.Json" Version="9.0.6" />
  </ItemGroup>

  <!-- ✅ XAML súbory ako Page pre InitializeComponent generáciu -->
  <ItemGroup>
    <Page Include="AdvancedWinUiDataGrid\Views\AdvancedDataGridControl.xaml">
      <Generator>MSBuild:Compile</Generator>
      <SubType>Designer</SubType>
    </Page>
    <Page Include="AdvancedWinUiDataGrid\Themes\Generic.xaml">
      <Generator>MSBuild:Compile</Generator>
      <SubType>Designer</SubType>
    </Page>
  </ItemGroup>

  <!-- ✅ Code-behind súbory -->
  <ItemGroup>
    <Compile Update="AdvancedWinUiDataGrid\Views\AdvancedDataGridControl.xaml.cs">
      <DependentUpon>AdvancedDataGridControl.xaml</DependentUpon>
    </Compile>
  </ItemGroup>

  <!-- ✅ NuGet packaging -->
  <ItemGroup>
    <!-- Main DLL -->
    <None Include="$(OutputPath)$(AssemblyName).dll" Pack="true" PackagePath="lib\$(TargetFramework)\" Condition="Exists('$(OutputPath)$(AssemblyName).dll')" />
    <None Include="$(OutputPath)$(AssemblyName).pdb" Pack="true" PackagePath="lib\$(TargetFramework)\" Condition="Exists('$(OutputPath)$(AssemblyName).pdb')" />

    <!-- XAML súbory ako content files pre consuming projekt -->
    <None Include="AdvancedWinUiDataGrid\Views\AdvancedDataGridControl.xaml" Pack="true" PackagePath="contentFiles\any\$(TargetFramework)\AdvancedWinUiDataGrid\Views\" />
    <None Include="AdvancedWinUiDataGrid\Themes\Generic.xaml" Pack="true" PackagePath="contentFiles\any\$(TargetFramework)\AdvancedWinUiDataGrid\Themes\" />

    <!-- Build targets -->
    <None Include="build\**\*" Pack="true" PackagePath="build\" />
    <None Include="buildTransitive\**\*" Pack="true" PackagePath="buildTransitive\" />
  </ItemGroup>

</Project>