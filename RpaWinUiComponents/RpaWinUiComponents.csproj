<!-- OPRAVENÝ RpaWinUiComponents.csproj - v1.0.20 - FIXED XBF generation -->
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0-windows10.0.19041.0</TargetFramework>
    <TargetPlatformMinVersion>10.0.17763.0</TargetPlatformMinVersion>
    <SupportedOSPlatformVersion>10.0.17763.0</SupportedOSPlatformVersion>
    <UseWinUI>true</UseWinUI>
    <PackageId>RpaWinUiComponents</PackageId>
    <!-- ✅ NOVÁ VERZIA -->
    <PackageVersion>1.0.20</PackageVersion>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>

    <!-- XAML nastavenia -->
    <EnableDefaultPageItems>false</EnableDefaultPageItems>
    <EnableDefaultXamlItems>false</EnableDefaultXamlItems>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>

    <!-- ✅ OPRAVENÉ XBF generation settings -->
    <EnableTypeInfoReflection>false</EnableTypeInfoReflection>
    <DisableXbfGeneratedMain>true</DisableXbfGeneratedMain>
    <GenerateXbf>true</GenerateXbf>
    <EnableXbfGeneration>true</EnableXbfGeneration>
    <IncludeXbfInPackage>true</IncludeXbfInPackage>
    <!-- ✅ PRIDANÉ: Force XBF generation -->
    <EnableMrtResourcePackaging>true</EnableMrtResourcePackaging>
    <UseWinUIModernResourceSystem>true</UseWinUIModernResourceSystem>

    <!-- Windows App SDK settings -->
    <WindowsAppSDKSelfContained>false</WindowsAppSDKSelfContained>
    <WindowsPackageType>None</WindowsPackageType>
    <EnableMsixTooling>false</EnableMsixTooling>

    <!-- Suppress warnings -->
    <NoWarn>$(NoWarn);CS8602;CS8603;CS8604;CS0628;CS1998;CS0436;CS1061;CS1537;CS0104;CS1503;CS0101;CS0111;CS0121;CS0234;CS1729;CS0229;CS0457;WMC1013;NETSDK1022;CA1416;CS2002;MSB3030;MSB3277;MSB3026</NoWarn>
    <MSBuildWarningsAsMessages>$(MSBuildWarningsAsMessages);MSB3030</MSBuildWarningsAsMessages>
  </PropertyGroup>

  <!-- ✅ OPRAVENÉ: Explicitné .cs súbory - INTERNAL triedy -->
  <ItemGroup>
    <!-- Main control -->
    <Compile Include="AdvancedWinUiDataGrid\Views\EnhancedDataGridControl.xaml.cs" />
    
    <!-- Global files -->
    <Compile Include="GlobalUsings.cs" />
    <Compile Include="GlobalAssemblyInfo.cs" />
    
    <!-- ✅ OPRAVENÉ: Include len PUBLIC API súbory -->
    <Compile Include="AdvancedWinUiDataGrid\AdvancedWinUiDataGridControl.cs" />
    <Compile Include="AdvancedWinUiDataGrid\ColumnDefinition.cs" />
    <Compile Include="AdvancedWinUiDataGrid\ValidationRule.cs" />
    <Compile Include="AdvancedWinUiDataGrid\ThrottlingConfig.cs" />
    <Compile Include="AdvancedWinUiDataGrid\ServiceCollectionExtensions.cs" />
    <Compile Include="AdvancedWinUiDataGrid\PublicApiExport.cs" />
    
    <!-- ✅ INTERNAL services a komponenty -->
    <Compile Include="AdvancedWinUiDataGrid\Services\**\*.cs" />
    <Compile Include="AdvancedWinUiDataGrid\ViewModels\**\*.cs" />
    <Compile Include="AdvancedWinUiDataGrid\Models\**\*.cs" />
    <Compile Include="AdvancedWinUiDataGrid\Commands\**\*.cs" />
    <Compile Include="AdvancedWinUiDataGrid\Converters\**\*.cs" />
    <Compile Include="AdvancedWinUiDataGrid\Collections\**\*.cs" />
    <Compile Include="AdvancedWinUiDataGrid\Events\**\*.cs" />
    <Compile Include="AdvancedWinUiDataGrid\Helpers\**\*.cs" />
    <Compile Include="AdvancedWinUiDataGrid\Configuration\**\*.cs" />
    
    <!-- ❌ VYLÚČENÉ: EditableCell a ostatné internal controls -->
    <!-- <Compile Include="AdvancedWinUiDataGrid\Controls\**\*.cs" /> -->
  </ItemGroup>

  <!-- ✅ FIXED: Removed XAML files that don't exist or shouldn't be public -->
  <ItemGroup>
    <None Remove="AdvancedWinUiDataGrid\Views\EnhancedDataGridControl.xaml" />
    <!-- ❌ REMOVED: EditableCell.xaml - internal component -->
    <!-- <None Remove="AdvancedWinUiDataGrid\Themes\EditableCell.xaml" /> -->
  </ItemGroup>

  <!-- ✅ OPRAVENÉ: LEN potrebné XAML súbory -->
  <ItemGroup>
    <!-- Generic themes -->
    <Page Include="AdvancedWinUiDataGrid\Themes\Generic.xaml">
      <Generator>MSBuild:Compile</Generator>
      <SubType>Designer</SubType>
    </Page>
    
    <!-- Main control -->
    <Page Include="AdvancedWinUiDataGrid\Views\EnhancedDataGridControl.xaml">
      <Generator>MSBuild:Compile</Generator>
      <SubType>Designer</SubType>
    </Page>
    
    <!-- ❌ REMOVED: EditableCell.xaml je internal, nebude v package -->
    <!-- <Page Include="AdvancedWinUiDataGrid\Themes\EditableCell.xaml"> -->
  </ItemGroup>

  <!-- Dependencies - nezmenené -->
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="9.0.6" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="9.0.6" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="9.0.6" />
    <PackageReference Include="Microsoft.WindowsAppSDK" Version="1.7.250606001" />
    <PackageReference Include="System.Text.Json" Version="9.0.6" />
  </ItemGroup>

  <!-- Build targets -->
  <ItemGroup>
    <None Include="build\RpaWinUiComponents.targets" Pack="true" PackagePath="build\RpaWinUiComponents.targets" />
    <None Include="buildTransitive\RpaWinUiComponents.targets" Pack="true" PackagePath="buildTransitive\RpaWinUiComponents.targets" />
  </ItemGroup>

  <!-- ✅ AKTUALIZOVANÉ Package metadata -->
  <PropertyGroup>
    <Title>RpaWinUiComponents - Advanced DataGrid CLEAN API</Title>
    <Description>Pokročilý WinUI 3 DataGrid komponent, OPRAVENÝ v1.0.20 - čistý PUBLIC API, správna XBF generation</Description>
    <Authors>RPA Solutions</Authors>
    <!-- ✅ AKTUALIZOVANÉ Release notes -->
    <PackageReleaseNotes>v1.0.20: MAJOR FIX - Opravená XBF generation pre XAML súbory, vyčistený PUBLIC API (EditableCell je teraz internal), iba potrebné triedy sú exportované do NuGet package</PackageReleaseNotes>
    <RepositoryUrl>https://github.com/yourusername/RpaWinUiComponents</RepositoryUrl>
    <PackageTags>WinUI3;DataGrid;Validation;Copy;Paste;CleanAPI;Fixed</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

</Project>