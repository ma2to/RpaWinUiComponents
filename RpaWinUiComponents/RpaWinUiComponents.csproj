<!-- OPRAVA RpaWinUiComponents.csproj - CS1061 a NETSDK1022 fix -->
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0-windows10.0.19041.0</TargetFramework>
    <TargetPlatformMinVersion>10.0.17763.0</TargetPlatformMinVersion>
    <SupportedOSPlatformVersion>10.0.17763.0</SupportedOSPlatformVersion>
    <UseWinUI>true</UseWinUI>
    <PackageId>RpaWinUiComponents</PackageId>
    <PackageVersion>1.0.11</PackageVersion>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>

    <!-- KĽÚČOVÁ OPRAVA NETSDK1022: Disable default items ktoré spôsobujú duplikáty -->
    <EnableDefaultPageItems>false</EnableDefaultPageItems>
    <EnableDefaultXamlItems>false</EnableDefaultXamlItems>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>

    <!-- OPRAVA CS1061: Enable XAML compilation -->
    <EnableMrtResourcePackaging>true</EnableMrtResourcePackaging>
    <UseWinUIModernResourceSystem>true</UseWinUIModernResourceSystem>

    <!-- Windows App SDK settings -->
    <WindowsAppSDKSelfContained>false</WindowsAppSDKSelfContained>
    <WindowsPackageType>None</WindowsPackageType>
    <EnableMsixTooling>false</EnableMsixTooling>

    <!-- Suppress warnings -->
    <NoWarn>$(NoWarn);CS8602;CS8603;CS8604;CS0628;CS1998;CS0436;CS1061;CS1537;CS0104;CS1503;CS0101;CS0111;CS0121;CS0234;CS1729;CS0229;CS0457;WMC1013;NETSDK1022;CA1416;CS2002</NoWarn>

    <!-- Multi-platform support -->
    <Platforms>AnyCPU;x86;x64;ARM64</Platforms>
    <DefaultPlatform>AnyCPU</DefaultPlatform>
  </PropertyGroup>

  <!-- KĽÚČOVÁ OPRAVA CS1061: Explicitne definované .cs súbory bez duplikátov -->
  <ItemGroup>
    <Compile Include="GlobalUsings.cs" />
    <Compile Include="GlobalAssemblyInfo.cs" />

    <!-- Všetky .cs súbory okrem XAML code-behind -->
    <Compile Include="AdvancedWinUiDataGrid\*.cs" />
    <Compile Include="AdvancedWinUiDataGrid\Collections\*.cs" />
    <Compile Include="AdvancedWinUiDataGrid\Commands\*.cs" />
    <Compile Include="AdvancedWinUiDataGrid\Configuration\*.cs" />
    <Compile Include="AdvancedWinUiDataGrid\Controls\*.cs" />
    <Compile Include="AdvancedWinUiDataGrid\Converters\*.cs" />
    <Compile Include="AdvancedWinUiDataGrid\Events\*.cs" />
    <Compile Include="AdvancedWinUiDataGrid\Helpers\*.cs" />
    <Compile Include="AdvancedWinUiDataGrid\Models\*.cs" />
    <Compile Include="AdvancedWinUiDataGrid\Services\Interfaces\*.cs" />
    <Compile Include="AdvancedWinUiDataGrid\Services\Implementation\*.cs" />
    <Compile Include="AdvancedWinUiDataGrid\ViewModels\*.cs" />

    <!-- XAML Code-behind súbory - explicitne s DependentUpon -->
    <Compile Include="AdvancedWinUiDataGrid\Views\AdvancedDataGridControl.xaml.cs">
      <DependentUpon>AdvancedWinUiDataGrid\Views\AdvancedDataGridControl.xaml</DependentUpon>
    </Compile>
  </ItemGroup>

  <!-- KĽÚČOVÁ OPRAVA NETSDK1022: Explicitne definované XAML súbory -->
  <ItemGroup>
    <Page Include="AdvancedWinUiDataGrid\Views\AdvancedDataGridControl.xaml">
      <Generator>MSBuild:Compile</Generator>
      <SubType>Designer</SubType>
    </Page>
    <Page Include="AdvancedWinUiDataGrid\Themes\Generic.xaml">
      <Generator>MSBuild:Compile</Generator>
      <SubType>Designer</SubType>
    </Page>
  </ItemGroup>

  <!-- Dependencies -->
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="9.0.6" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="9.0.6" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="9.0.6" />
    <PackageReference Include="Microsoft.WindowsAppSDK" Version="1.7.250606001" />
    <PackageReference Include="System.Text.Json" Version="9.0.6" />
  </ItemGroup>

  <!-- OPRAVA NETSDK1022: Exclude auto-included files -->
  <ItemGroup>
    <Compile Remove="obj\**\*" />
    <Compile Remove="bin\**\*" />
    <Page Remove="obj\**\*" />
    <Page Remove="bin\**\*" />
    <None Remove="obj\**\*" />
    <None Remove="bin\**\*" />
  </ItemGroup>

  <!-- KĽÚČOVÁ OPRAVA CS1061: Ensure XAML gets compiled properly -->
  <Target Name="EnsureXamlCompilation" BeforeTargets="MarkupCompilePass1">
    <Message Text="🔧 Ensuring XAML compilation for InitializeComponent generation" Importance="high" />
    <ItemGroup>
      <!-- Verify XAML files are properly configured -->
      <_XamlFiles Include="AdvancedWinUiDataGrid\Views\AdvancedDataGridControl.xaml" />
      <_XamlFiles Include="AdvancedWinUiDataGrid\Themes\Generic.xaml" />
    </ItemGroup>
    <Message Text="📄 XAML files to compile: @(_XamlFiles)" Importance="normal" />
  </Target>

  <!-- OPRAVA MSB3030: Include XBF files in NuGet package -->
  <ItemGroup>
    <None Include="build\RpaWinUiComponents.targets" Pack="true" PackagePath="build\RpaWinUiComponents.targets" />
    <None Include="buildTransitive\RpaWinUiComponents.targets" Pack="true" PackagePath="buildTransitive\RpaWinUiComponents.targets" />
  </ItemGroup>

  <!-- OPRAVA MSB3030: Custom pack target pre XBF súbory -->
  <Target Name="PackXbfFiles" AfterTargets="Build" BeforeTargets="Pack" Condition="'$(Configuration)' == 'Release'">
    <PropertyGroup>
      <_XbfOutputPath>$(OutputPath)</_XbfOutputPath>
    </PropertyGroup>

    <ItemGroup>
      <_XbfFiles Include="$(_XbfOutputPath)**\*.xbf" />
    </ItemGroup>

    <Message Text="📦 Found $([MSBuild]::ValueOrDefault('@(_XbfFiles->Count())', '0')) XBF files to pack" Importance="high" />

    <ItemGroup Condition="'@(_XbfFiles)' != ''">
      <None Include="@(_XbfFiles)" Pack="true" PackagePath="lib\$(TargetFramework)\%(_XbfFiles.RecursiveDir)%(_XbfFiles.Filename)%(_XbfFiles.Extension)" />
    </ItemGroup>
  </Target>

  <!-- Package metadata -->
  <PropertyGroup>
    <Title>RpaWinUiComponents - Advanced DataGrid</Title>
    <Description>Pokročilý WinUI 3 DataGrid komponent s real-time validáciou, copy/paste funkcionalitou a Clean Architecture pre .NET 8. OPRAVENÁ VERZIA v1.0.11 - CS1061 InitializeComponent a NETSDK1022 vyriešené.</Description>
    <Authors>RPA Solutions</Authors>
    <Company>RPA Solutions</Company>
    <Product>RpaWinUiComponents</Product>
    <Copyright>Copyright © RPA Solutions 2024</Copyright>
    <PackageTags>WinUI3;DataGrid;Validation;MVVM;RPA;NET8;WinUI;Advanced;Fixed;Windows;NuGet;XBF;InitializeComponent</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageProjectUrl>https://github.com/rpa-solutions/RpaWinUiComponents</PackageProjectUrl>
    <RepositoryUrl>https://github.com/rpa-solutions/RpaWinUiComponents</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageReleaseNotes>v1.0.11: CS1061 InitializeComponent OPRAVENÉ. NETSDK1022 duplicate Page items VYRIEŠENÉ. Kompletne funkčný XAML compilation.</PackageReleaseNotes>
  </PropertyGroup>

</Project>