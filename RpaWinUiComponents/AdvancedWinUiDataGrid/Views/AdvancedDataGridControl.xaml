<!-- OPRAVENÃ AdvancedDataGridControl.xaml - FixnutÃ© WMC0035 chyby -->
<UserControl
    x:Class="RpaWinUiComponents.AdvancedWinUiDataGrid.Views.AdvancedDataGridControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="White">

    <UserControl.Resources>
        <!-- Convertory -->
        <x:Double x:Key="CellMinHeight">35</x:Double>

        <!-- Å tÃ½ly -->
        <Style x:Key="DataCellTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="MinHeight" Value="{StaticResource CellMinHeight}"/>
        </Style>

        <Style x:Key="ErrorCellTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource DataCellTextBoxStyle}">
            <Setter Property="BorderBrush" Value="Red"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="#FFEEEE"/>
        </Style>

        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8,10"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Panel -->
        <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="0,0,0,1" Padding="12">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸ“Š RpaWinUiComponents DataGrid" FontSize="14" FontWeight="Bold" Foreground="#1976D2" VerticalAlignment="Center"/>
                <TextBlock x:Name="StatusIndicator" Text=" - Loading..." FontSize="12" Foreground="#666" VerticalAlignment="Center" Margin="8,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content - OPRAVENÃ‰: Jeden Grid kontajner namiesto duplicitnÃ©ho obsahu -->
        <Grid Grid.Row="1" x:Name="MainContentGrid">
            <!-- Loading Panel -->
            <StackPanel x:Name="LoadingPanel" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Visibility="Visible">
                <ProgressRing IsActive="True" Width="50" Height="50"/>
                <TextBlock Text="NaÄÃ­tava sa DataGrid..." 
                          FontSize="14" 
                          Foreground="#666"
                          HorizontalAlignment="Center"
                          Margin="0,16,0,0"/>
            </StackPanel>

            <!-- DataGrid Container s ScrollViewer -->
            <ScrollViewer x:Name="MainScrollViewer"
                          Visibility="Collapsed"
                          ZoomMode="Disabled"
                          HorizontalScrollMode="Auto"
                          VerticalScrollMode="Auto"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto"
                          Background="White">

                <!-- âœ… OPRAVENÃ‰: Len jeden Content element v ScrollViewer -->
                <Grid x:Name="DataGridContainer" Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Header -->
                        <RowDefinition Height="*"/>
                        <!-- Data -->
                    </Grid.RowDefinitions>

                    <!-- Header Row -->
                    <Border Grid.Row="0" 
                            Background="#F8F9FA" 
                            BorderBrush="#DEE2E6" 
                            BorderThickness="1"
                            CornerRadius="4,4,0,0">
                        <ScrollViewer x:Name="HeaderScrollViewer"
                                      HorizontalScrollMode="Auto"
                                      VerticalScrollMode="Disabled"
                                      HorizontalScrollBarVisibility="Hidden"
                                      VerticalScrollBarVisibility="Disabled"
                                      ZoomMode="Disabled">
                            <StackPanel x:Name="HeaderPanel" 
                                       Orientation="Horizontal" 
                                       Background="#F8F9FA"
                                       MinHeight="45"/>
                        </ScrollViewer>
                    </Border>

                    <!-- Data Rows -->
                    <ScrollViewer Grid.Row="1"
                                  x:Name="DataScrollViewer"
                                  HorizontalScrollMode="Auto"
                                  VerticalScrollMode="Auto"
                                  HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto"
                                  ZoomMode="Disabled">
                        <StackPanel x:Name="DataRowsPanel" 
                                   Background="White"/>
                    </ScrollViewer>
                </Grid>

            </ScrollViewer>

            <!-- Empty State -->
            <StackPanel x:Name="EmptyStatePanel"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Visibility="Collapsed">
                <TextBlock Text="ðŸ“„ Å½iadne dÃ¡ta" 
                          FontSize="16" 
                          FontWeight="Bold" 
                          Foreground="#999"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="PouÅ¾ite LoadDataAsync() na naÄÃ­tanie dÃ¡t" 
                          FontSize="12" 
                          Foreground="#BBB"
                          HorizontalAlignment="Center"
                          Margin="0,8,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Status Footer -->
        <Border Grid.Row="2" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="StatusText" 
                          Grid.Column="0"
                          Text="PripravenÃ©" 
                          FontSize="11" 
                          Foreground="#666" 
                          VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock x:Name="RowCountText" 
                              Text="0 riadkov" 
                              FontSize="11" 
                              Foreground="#999" 
                              VerticalAlignment="Center"
                              Margin="0,0,16,0"/>
                    <TextBlock x:Name="ValidationText" 
                              Text="" 
                              FontSize="11" 
                              Foreground="Red" 
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</UserControl>