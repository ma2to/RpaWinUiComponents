    </ItemGroup>

    <PropertyGroup>
      <_RpaHasXbfFiles Condition="'@(AvailableRpaXbfFiles)' != ''">true</_RpaHasXbfFiles>
      <_RpaHasXbfFiles Condition="'@(AvailableRpaXbfFiles)' == ''">false</_RpaHasXbfFiles>
